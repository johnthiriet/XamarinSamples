<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:FromRendererToCore"
    xmlns:appcontrols="clr-namespace:FromRendererToCore.Controls"
    x:Class="FromRendererToCore.MainPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
	    <appcontrols:MyCustomLabel TappedCommand="{Binding TappedCommand}" Text="Tap Me !" HorizontalOptions="Center" />
        <Label Text="{Binding DynamicContent}" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
